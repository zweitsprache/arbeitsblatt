generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model Worksheet {
  id          String   @id @default(cuid())
  title       String   @default("Untitled Worksheet")
  description String?
  slug        String   @unique
  blocks      Json     @default("[]")
  settings    Json     @default("{}")
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}
