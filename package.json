{
  "name": "arbeitsblatt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --raw \"next dev\" \"i18nexus listen -p src/messages\"",
    "dev:next": "next dev",
    "build": "prisma generate && (i18nexus pull -p src/messages || true) && node scripts/validate-translations.mjs && next build",
    "start": "next start",
    "lint": "eslint",
    "i18n:pull": "i18nexus pull -p src/messages",
    "i18n:validate": "node scripts/validate-translations.mjs",
    "i18n:import": "i18nexus import src/messages/de.json --overwrite",
    "i18n:sync": "npm run i18n:import && sleep 3 && npm run i18n:pull && npm run i18n:validate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource/merriweather": "^5.2.11",
    "@neondatabase/auth": "^0.2.0-beta.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@react-pdf/renderer": "^4.3.2",
    "@resvg/resvg-js": "^2.6.2",
    "@tiptap/extension-color": "^3.19.0",
    "@tiptap/extension-highlight": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-subscript": "^3.19.0",
    "@tiptap/extension-superscript": "^3.19.0",
    "@tiptap/extension-text-align": "^3.19.0",
    "@tiptap/extension-text-style": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "@vercel/blob": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.4",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "next-intl": "^4.8.2",
    "pdf-lib": "^1.17.1",
    "pg": "^8.18.0",
    "pptxgenjs": "^4.0.1",
    "prisma": "^7.3.0",
    "puppeteer": "^24.37.2",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-easy-crop": "^5.5.6",
    "satori": "^0.19.2",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "i18nexus-cli": "^3.8.2",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
